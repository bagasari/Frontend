<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="지출 내역 작성"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="상품 이름을 입력하시오"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="구매 가격을 입력하시오"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_product_name"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_purchase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작 날짜 선택"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_product_price" />

    <EditText
        android:id="@+id/et_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="세부 사항을 입력하시오"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_purchase_date"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_product_country"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_arrow_down"
        android:layout_margin="10dp"
        android:text="구매 국가"
        android:textColor="#FF000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_product_detail" />

    <Button
        android:id="@+id/btn_product_city"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="4dp"
        android:drawableRight="@drawable/ic_arrow_down"
        android:text="구매 도시"
        android:textColor="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_product_detail" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="상품 카테고리"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_product_country" />

    <ImageButton
        android:id="@+id/ib_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/ic_food" />

    <ImageButton
        android:id="@+id/ib_transportation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/ic_transportation" />


</androidx.constraintlayout.widget.ConstraintLayout>